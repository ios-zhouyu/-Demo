.topView {
    background-color: #E1E1E1;
    align-items: center;
    text-align: center;
}
.itemView {
    display: flex;
    flex-direction: column;
    padding: 10rpx 20rpx 0rpx 20rpx;
}
.selectedBackground {
    background-color: #D8D8D8
}
.content {
    display: flex;
    flex-direction: row;
    padding-bottom: 20rpx;
    padding-top: 10rpx;
    border-bottom: 1rpx solid #E1E1E1;
}

.leftView {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}
.title {
    display: flex;
    font-size: 36rpx;
    color: #333333;
    margin-bottom: 10rpx;
}
.subTitle {
    display: flex;
    font-size: 30rpx;
    color: #999999;
}

.rightView {
    display: flex;
    flex-direction: column;
    width: 40rpx;
    justify-content: center;
}
.arrow {
    display: flex;
    width: 16rpx;
    height: 34rpx;
    align-self: center;
}
